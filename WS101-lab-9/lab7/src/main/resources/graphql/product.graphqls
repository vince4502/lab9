type Product {
    id: ID
    name: String
    price: Float
}
input ProductInput {
    id: ID!
    name: String!
    price: Float!
}

type Query {
    getAllProducts: [Product]
    getProductById(id: ID!): Product
}

type Mutation {
    createProduct(name: String!, price: Float!): Product
    updateProduct(id: ID!, name: String!, price: Float!): Product
    deleteProduct(id: ID!): Boolean
}
